# === General Navigation ===
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias c='clear'
alias h='history'

# === Laravel Dev Shortcuts ===
alias artisan='php artisan'
alias serve='php artisan serve'
alias tinker='php artisan tinker'
alias migrate='php artisan migrate'
alias seed='php artisan db:seed'
alias fresh='php artisan migrate:fresh --seed'
alias test='php artisan test'
alias cc='php artisan config:clear && php artisan cache:clear && php artisan route:clear && php artisan view:clear'

# === Git Shortcuts ===
alias gst='git status'
alias gco='git checkout'
alias gaa='git add .'
alias gcm='git commit -m'
alias gp='git push'
alias gl='git pull'
alias grhh='git reset --hard HEAD'
alias gclean='git clean -fd'

# === Dotfiles Automation (Manual Triggers) ===
alias dotfiles-sync='bash ~/.dotfiles/scripts/auto-commit-dotfiles.sh'
alias dotfiles-update='bash ~/.dotfiles/scripts/auto-update-packages.sh'
alias dotfiles-upstream='bash ~/.dotfiles/scripts/auto-sync-upstream.sh'
alias dotfiles-logs='tail -f ~/.dotfiles/logs/*.log'
alias dotfiles-status='launchctl list | grep com.dotfiles'

# === MySQL ===
alias mysqlstart='brew services start mysql'
alias mysqlstop='brew services stop mysql'
alias mysqlrestart='brew services restart mysql'

# === VS Code ===
alias code.='code .'

# === Composer ===
alias comp='composer'
alias ci='composer install'
alias cu='composer update'

# === NPM/Yarn ===
alias npmi='npm install'
alias npms='npm start'
alias npmb='npm run build'
alias yni='yarn install'
alias yns='yarn start'
alias ynb='yarn build'

# === Docker (if used) ===
alias dcu='docker-compose up -d'
alias dcd='docker-compose down'
alias dcl='docker-compose logs -f'
alias dcb='docker-compose build'

# === Misc ===
alias reload='source ~/.zshrc'
alias hosts='sudo nano /etc/hosts'
alias path='echo $PATH | tr ":" "\n"'

